{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0",
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/$", "dest": "/api/index.php" },
    { "src": "^/(.*\\.php)$", "dest": "/api/$1" }
  ],
  "env": {
    "NODE_VERSION": "18.x",
    "WRITE_PATH": "/tmp"
  }
}
